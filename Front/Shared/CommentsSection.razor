<div class="mt-4 bg-gray-700 rounded-lg p-4">
    <p class="text-indigo-300 mb-2 font-semibold">Comments</p>

    @foreach (var comment in Comments)
    {
        <div class="flex items-start mb-3">
            <img src="@comment.AvatarUrl" alt="@comment.Author" class="w-8 h-8 rounded-full border border-indigo-600" />
            <div class="ml-3">
                <p class="text-indigo-300 font-semibold text-sm">@comment.Author</p>
                <p class="text-gray-300 text-sm">@comment.Content</p>
                <p class="text-xs text-gray-500">@comment.Timestamp.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</p>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public List<Comment> Comments { get; set; } = new();
}
